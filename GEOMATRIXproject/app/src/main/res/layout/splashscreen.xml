<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView android:layout_width="271.44dp"
               android:layout_height="291.33dp"
               android:layout_marginTop="98.97dp"
               android:layout_marginLeft="36.84dp"

               android:id="@+id/img1"
               android:src="@drawable/splash"

             />


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:layout_marginTop="24.32dp"
              android:layout_below="@+id/img1"
              android:text="@string/splashtag"
              android:id="@+id/tv1"
              android:textColor="#4B8130"
              android:gravity="center"
              android:textSize="15dp"
              android:textStyle="bold"


              android:fontFamily="@font/montserrat_bold"/>
    <TextView android:layout_width="264dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv2"
              android:layout_below="@+id/tv1"
              android:fontFamily="@font/montserrat"

              android:textSize="13dp"
              android:gravity="center"
              android:textColor="#333333"
              android:layout_marginTop="10.4dp"
              android:textStyle="normal"
              android:layout_centerHorizontal="true"

              android:text="@string/sscontent"/>

</RelativeLayout>
