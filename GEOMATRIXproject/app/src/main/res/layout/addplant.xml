<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="88dp" tools:ignore="ExtraText">
        <ImageView android:layout_width="27dp"
                   android:layout_height="match_parent"
                   android:padding="5dp"
                   android:id="@+id/apimg1"

                   android:layout_marginLeft="18dp"
                   android:src="@drawable/back"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Add new Plant"
                  android:id="@+id/aptv1"
                  android:textSize="20dp"
                  android:layout_marginTop="30dp"

                  android:layout_marginLeft="80dp"

                  android:layout_toRightOf="@id/apimg1"
                  android:textStyle="bold"
                  android:textColor="#000000"/>


        <ImageView android:layout_width="18dp"
                   android:layout_marginLeft="90dp"
                   android:id="@+id/apimg2"
                   android:layout_height="match_parent"
                   
                   android:src="@drawable/tick"
                   android:layout_toRightOf="@+id/aptv1"/>
        <View android:layout_width="match_parent"
              android:id="@+id/apv1"


              android:layout_height="10dp"
              android:layout_below="@id/apimg2"


        />


    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:textSize="20dp"
                  android:fontFamily="@font/montserrat_bold"
                  android:textColor="#000000"

                  android:padding="8dp"
                  android:id="@+id/uploadimg"
                  android:textAlignment="viewStart"


                  android:text="Upload Image"


        />
        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="100dp"
                                           android:layout_margin="15dp"
                                           app:cardCornerRadius="10dp"
                                           android:clipToPadding="true"
                                           android:id="@+id/cardview1"
        android:layout_below="@id/uploadimg">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/camerabutton"

                        android:layout_marginTop="25dp"
                        android:background="@drawable/camera"

                        android:scaleType="fitXY" />
                <TextView
                        android:layout_width="200dp"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"

                        android:textStyle="bold"
                        android:id="@+id/uctv1"

                        android:textSize="20dp"
                        android:text="Use Camera" android:textColor="#4B8130"/>
                <TextView android:layout_width="200dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="113dp"
                          android:textSize="20dp"
                          android:gravity="center_horizontal"
                          android:layout_below="@+id/uctv1"
                          android:text="Lorem Ipsum Content"





                />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="OR"
                  android:textSize="20dp"
                  android:layout_below="@id/cardview1"
                  android:textAlignment="center"
                  android:id="@+id/OR"


                  />

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="100dp"
                                           android:layout_margin="15dp"
                                           app:cardCornerRadius="10dp"
                                           android:clipToPadding="true"
                                           android:id="@+id/cardview2"
                                           android:layout_below="@id/OR">



            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/gallery"
                        android:scaleType="fitXY" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="110dp"
                        android:textStyle="bold"
                        android:id="@+id/uctv2"

                        android:textSize="20dp"
                        android:text="Select the image from Gallery" android:textColor="#4B8130"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="5dp"
                          android:textSize="20dp"
                          android:gravity="center_horizontal"
                          android:layout_below="@+id/uctv2"
                          android:text="PNG, JPG OR SVG"





                />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#000000"

        android:padding="8dp"
        android:id="@+id/uploadedimg"
        android:textAlignment="viewStart"
        android:layout_below="@id/cardview2"


        android:text="Uploaded Image"/>


    <ImageView android:layout_width="137dp" android:layout_height="150dp"
    android:src="@drawable/plant1"
              android:id="@+id/plant1"
    android:layout_below="@id/uploadedimg"/>

        <ImageView android:layout_width="137dp" android:layout_height="150dp"
                   android:src="@drawable/plant2"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/plant2"
                   android:layout_below="@id/uploadedimg"
        android:layout_toRightOf="@id/plant1"/>

        <ImageView android:layout_width="137dp" android:layout_height="150dp"
                   android:src="@drawable/plant3"
                   android:layout_marginLeft="10dp"

                   android:id="@+id/plant3"
                   android:layout_below="@id/uploadedimg"
                   android:layout_toRightOf="@id/plant2"/>







        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Plant Name"
                  android:id="@+id/plantname"
        android:layout_below="@id/plant1"
        android:textSize="25dp"
        android:textColor="#4B8130"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:theme="@style/TextLabel"
                android:layout_below="@+id/plantname"
                android:id="@+id/edittxt1"



                android:textColorHint="#4B8130"

                android:backgroundTint="#4B8130"
                app:boxStrokeColor="#4B8130"

                app:boxBackgroundColor="#4B8130"


                app:hintAnimationEnabled="true"
                android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="350dp"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:inputType="text"
            />



        </com.google.android.material.textfield.TextInputLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Multi-line input label"
                  android:id="@+id/multiline"
                  android:layout_below="@id/edittxt1"
                  android:textSize="25dp"
                  android:textColor="#4B8130"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="30dp"/>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:theme="@style/TextLabel"
                android:layout_below="@+id/multiline"
                android:id="@+id/edittxt2"



                android:textColorHint="#4B8130"

                android:backgroundTint="#4B8130"
                app:boxStrokeColor="#4B8130"
                app:boxBackgroundColor="#4B8130"


                app:hintAnimationEnabled="true"
                android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:inputType="text"
        />


        </com.google.android.material.textfield.TextInputLayout>



    </RelativeLayout>

</LinearLayout>
</ScrollView>