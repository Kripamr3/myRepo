<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/llchildContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_marginBottom="5dp">

        <ImageView android:layout_width="120dp"

                   android:id="@+id/im1"

                   android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Amaryllis"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:textSize="25dp"
                  android:id="@+id/lltv1"
                  android:padding="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="120dp"
                  android:layout_toRightOf="@id/im1"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/plantdesc"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small"
                  android:id="@+id/lltv2"
                  android:layout_marginLeft="120dp"
                  android:textAlignment="viewStart"
                  android:layout_marginTop="50dp"


        />

    </androidx.cardview.widget.CardView>
</RelativeLayout>